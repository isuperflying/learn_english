page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.video-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.video-item {
  width: 50%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border-radius: 2px;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 10rpx;
}

.vip-view {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: flex-start;
}

.video-cover {
  width: 92%;
  height: 194rpx;
  border-radius: 6px;
  margin-left: 4%;
}

.vip-img {
  width: 82rpx;
  height: 38rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.video-title {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #000;
  text-overflow: ellipsis;
}

.bottom-view {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  border-top: 1rpx solid #f8f8f8;
}

.bottom-txt {
  color: #cdcdcd;
  font-size: 26rpx;
}

.model{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);/*蒙层的透明度可以自定义*/
  z-index: 9999999999;
}
.show{
  display: block;
}
.close{
  display: none;
}

/*下方可以自定义*/
.model-pack{
  width: 80%;
  margin: 0 auto;
  margin-top: 50%;
  background: #fff;
  border-radius: 8px;
}
.model-title{
  font-size: 1.3rem;
  text-align: center;
  padding: 0.5rem 0;
  color: #f75f5f;
  font-weight: 600;
}
.model-content{
  font-size: 1rem;
  padding: 0.8rem 2rem;
  height: 150rpx;
}
.model-button{
  font-size: 0.9rem;
  margin-top: 0.3rem;
  width: 100%;
  border-top: 1px solid #eee;
  border-radius: 0 0 8px 8px;
  overflow: hidden;
  text-align: center;
}
.model-button-cancel{
  float: left;
  width: 50%;
  height: 2.5rem;
  line-height: 2.5rem;
  box-sizing: border-box;
  border-right: 1px solid #eee;
  color: #aaa;
}
.model-button-confirm{
  width: 50%;
  float: left;
  height: 2.5rem;
  line-height: 2.5rem;
  color: #2ec24b;
}
.confirm{
  height: 2.5rem;
  line-height: 2.5rem;
}

button::after{
  border: 0;
}